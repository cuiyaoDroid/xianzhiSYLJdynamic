<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_grag" >

        <LinearLayout
            android:id="@+id/blue_line"
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_top_small"
            android:orientation="vertical" >
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/blue_line"
            android:background="@drawable/bg_train_title"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/train_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:paddingBottom="3dp" >

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="45dp"
                    android:layout_height="45dp" 
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"/>
                
            </LinearLayout>
        </HorizontalScrollView>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/horizontalScrollView"
            android:layout_toRightOf="@+id/main_radiogroup"
            android:background="@drawable/raidu_frame_bg" >
        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/main_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="-2dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/horizontalScrollView"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/RadioButton0"
                style="@style/tab_item_background"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingBottom="3dp"
                android:paddingTop="2dp"
                android:text="车次信息" />

            <RadioButton
                android:id="@+id/RadioButton1"
                style="@style/tab_item_background"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingBottom="3dp"
                android:paddingTop="2dp"
                android:text="编组情况" />

            <RadioButton
                android:id="@+id/RadioButton2"
                style="@style/tab_item_background"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingBottom="3dp"
                android:paddingTop="2dp"
                android:text="重点工作" />

            <RadioButton
                android:id="@+id/RadioButton3"
                style="@style/tab_item_background"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingBottom="3dp"
                android:paddingTop="2dp"
                android:text="乘务记录" />

            <RadioButton
                android:id="@+id/RadioButton4"
                style="@style/tab_item_background"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingBottom="3dp"
                android:paddingTop="2dp"
                android:text="提交报告"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1" >
            </LinearLayout>

            <RadioButton
                android:id="@+id/RadioButton5"
                style="@style/tab_item_background"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:button="@null"
                android:paddingBottom="3dp"
                android:paddingTop="2dp"
                android:text="审阅记录" />
        </RadioGroup>
    </RelativeLayout>

</TabHost>