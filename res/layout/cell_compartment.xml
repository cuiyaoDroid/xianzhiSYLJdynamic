<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="2dp">

    <ImageView
        android:id="@+id/seat_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_margin="3dp"
        android:src="@drawable/img_seat_empty" />

    <TextView
        android:id="@+id/seat_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seat_img"
        android:layout_alignLeft="@+id/seat_img"
        android:layout_alignRight="@+id/seat_img"
        android:layout_alignTop="@+id/seat_img"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="A12" 
        android:layout_marginRight="10dp"
        android:textSize="10sp"/>

</RelativeLayout>
