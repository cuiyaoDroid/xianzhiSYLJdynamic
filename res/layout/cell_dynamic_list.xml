<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listitem_bg_single"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:weightSum="6" >
    <TextView
        android:id="@+id/train_number_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center"
        android:text="车次"
        android:textColor="@color/blue"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/start_time_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:gravity="center"
        android:text="发车日期"
        android:textColor="@color/Black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/start_position_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center"
        android:text="始发站"
        android:textColor="@color/Black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/arrive_position_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="终到站"
        android:textColor="@color/Black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/watch_group_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="当值班组"
        android:textColor="@color/Black"
        android:textSize="13sp" />
<!--  
    <TextView
        android:id="@+id/Interval_position_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="行车区间"
        android:textColor="@color/Black"
        android:textSize="13sp" />
-->
    <TextView
        android:id="@+id/station_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="状态"
        android:textColor="@color/blue"
        android:textSize="13sp" />

</LinearLayout>