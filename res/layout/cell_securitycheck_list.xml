<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/image_content"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="4dp"
        android:background="@color/lightgray"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/img2"
        android:layout_toRightOf="@+id/image_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:text="TextView"
            android:textColor="@color/Black"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:src="@drawable/bg_list_item" />

    <TextView
        android:id="@+id/time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_content"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:text="TextView"
        android:gravity="right"
        android:layout_toLeftOf="@+id/img2"
        android:layout_marginRight="10dp"
        android:textColor="@color/hintgray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/checker_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/image_content"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@+id/time_txt"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/hintgray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/result_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:textSize="11sp"
        android:textColor="@color/Red"
        android:text="TextView" />

</RelativeLayout>