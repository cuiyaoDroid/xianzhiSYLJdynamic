<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:background="@drawable/bg_seat_info"
    android:orientation="vertical" 
    android:padding="8dp"
    android:weightSum="5">
	<!--
    <ImageView
        android:id="@+id/bg_img"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@drawable/bg_seat_info" />
    <ImageView
        android:id="@+id/arrow_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/bg_seat_info_arrow" />    -->

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:paddingLeft="6dp"
        android:gravity="center_vertical"
        android:text="TextView" />

    <TextView
        android:id="@+id/personal_code_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/start_station_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/arrive_station_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/tick_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:text="TextView" />

</LinearLayout>